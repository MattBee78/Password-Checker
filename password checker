password = input ("enter your chosen password ensure the following criteria is applied. minimum 10 characters, contains minimum one uppercae, one lowercase character and one number")
 
if (any(x.isupper() for x in password)
    and any(x.islower() for x in password)
    and any(x.isdigit() for x in password)
    and len(password) >= 10):
    print ("Password is cool")
